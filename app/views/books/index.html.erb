    <header class="navbar navbar-default">
      <div class="sort container-fluid">
        <div class="navbar-header">
          <h1 class="navbar-brand">All Books   <img class="navbar-brand" src="https://www.freeiconspng.com/uploads/bible-icon-8.png" alt="Book" height="42" width="42"></h1>
        </div>
          <ul  class="nav navbar-nav" >

            <p class="active"> <%= link_to "Add Book", new_book_path, class:"btn btn-primary"%>
            <%= link_to "Lowest Rated", books_path(sort: :rating, order: :asc), class:"btn btn-primary" %>
            <%= link_to "Highest Rated", books_path(sort: :rating, order: :desc), class:"btn btn-primary" %>
            <%= link_to "Lowest Page Count", books_path(sort: :pages, order: :asc), class:"btn btn-primary" %>
            <%= link_to "Highest Page Count", books_path(sort: :pages, order: :desc), class:"btn btn-primary" %>
            <%= link_to "Least Reviewed", books_path(sort: :reviews, order: :asc), class:"btn btn-primary" %>
            <%= link_to "Most Reviewed", books_path(sort: :reviews, order: :desc), class:"btn btn-primary" %>
          </p>
          </ul>
        </div>
      </header>
      <h2>Book Statistics</h2>
    <nav>
      <div id="statistics">
        <p class="stat">Highest Rated Books: <% @highest_rated.each do |book| %>
          <%= book.title %>:
          <%= book.avg_rating.round(1) %>
          <% end %> </p>
        <p class="stat">Lowest Rated Books: <% @lowest_rated.each do |book| %>
          <%= book.title %>:
          <%= book.avg_rating.round(1) %>
          <% end %></p>
        <p class="stat">Most Active Users: <% @most_active_user.each do |user| %>
          <%= user.user %>:
          <%= user.num_reviews %>
          <% end %></p>
      </div>
    </nav>
    <div class="container">
    <% @books.each do |book| %>
    <div class="book-card">
      <section class="books" >
        <div class="grid-item" id="book-<%= book.id %>">
          <h3 class="book-title"><%= link_to "#{book.title}", book_path(book) %></h3>
          <p class="text">Average Rating: <%= book.average_rating %> </p>
          <p class="text">Total Reviews: <%= book.total_reviews %> </p>
          <p class="text">Pages: <%= book.pages %></p>
          <p class="text">Year: <%= book.year %></p>
          <img class="img-thumbnail" src="<%= book.cover_image %>">
          <p class="text"><% book.authors.each do |author| %></p>
          <p class="text">Authors: <%= link_to author.name, author_path(author) %> </p>
          <% end %>
        </div>
      </section>
    </div>
          <% end %>
  </div>
