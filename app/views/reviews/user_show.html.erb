<div id="sort">
  <p> <%= link_to "Sort by Most Recent", user_path(user: @user.first.user, sort: 'desc') %> |
      <%= link_to "Sort by Least Recent", user_path(user: @user.first.user, sort: 'asc') %>
  </p>
</div>
<% @user.each do |r| %>
<div class="user-info-<%="#{r.id}"%>" >
  <p class="text" id="review-title"> Review Title: <%= r.title %> </p>
  <p class="text"> Rating(1-5): <%= r.rating %> </p>
  <p class="text"> Description: <%= r.description %> </p>
  <p class="text"> Created On: <%= r.created_at %> </p>
  <p class="text"> Book Title: <%= link_to "#{r.book_title}", book_path(r.book_id) %> </p>
  <p> <img class="img-thumbnail" src="<%= r.cover_image  %>" alt="@book"> </p>
  <p class="remove"> <%= link_to "Delete Review", book_review_path(r.book_id, r.id), method: :delete %> </p>
</div>
<% end %>
